article{
  background-color: #fff;
  padding:20rpx;
  margin:0 10rpx 10rpx 10rpx;
  border-radius: 8rpx;
  display:block;
}


.header{
  width:100%;
  overflow: hidden;
}

.header>.left{
  width:70rpx;
  height:70rpx;
  float:left;
}

.avatar{
  width:100%;
  height:100%;
  border-radius: 6rpx;
}

.from{
  margin-left:20rpx;
  float:left;
  width:400rpx;
}

.from-name{
  font-size:30rpx;
  color:#3385FF;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.from-time{
  font-size:20rpx;
  color:#80848F;
  margin-top:5rpx;
}

.right{
  width:200rpx;
  float:right;
  text-align: right;
}

/* 内容 */
.body{
  margin-top:20rpx;
}

.content{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6; 
  overflow: hidden;
  word-break: break-all;
}

/* 图片 */
.images{
  overflow:hidden;
  margin-top:20rpx;
}
.images>.image{
  width:32%;
  height:32vw;
  display:block;
  float:left;
}

.images>.image:nth-child(3n+3), .images>.image:nth-child(3n+2){
  margin-left:2%;
}

.images>.image:nth-child(n+4){
  margin-top:2%;
}

/* 底部 */
.footer{
  background:#fff;
  display: flex;
  text-align:center;
  margin-top:20rpx;
  border-top:1px solid #F7F5F6;
}
.footer>.item{
  flex-grow:1;
  padding-top:10rpx;
}

.arrow-up{
  width:0; 
  height:0; 
  border-left:20rpx solid transparent;
  border-right:20rpx solid transparent;
  border-bottom:20rpx solid #F8F8F9;
  margin:0 auto;
  margin-top:5rpx;
}

.footer>.item>.number{
  display:inline-block;
  vertical-align: middle;
  height:50rpx;
  line-height:55rpx;
  font-size:25rpx;
  margin-left:10rpx;
  color:#80848f;
}

.icon{
  display:inline-block;
}

.icon image{
  vertical-align: bottom;
  width:40rpx;
  height:40rpx;
}

.message{
  display: block;
  background-color: #F8F8F9;
  border-radius:6rpx;
  font-size:30rpx;
  padding:15rpx;
}

.icommit{
  margin-top:10rpx;
}

.icommit text{
  word-break: break-all;
}

.icommit_who{
  color: #3385FF;
  font-size: 13px;
}

.icommit_comm{
  font-size: 13px;
}




