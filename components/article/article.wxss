.cf-box {
  margin-top:20rpx;
  display: flex;
}

.cf-bg {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 99;
  background-color: transparent;
}

.emoji {
  background-color: #fff;
  width: 30px;
  text-align: center;
  padding-top: 2px;
  box-sizing: border-box;
  font-size: 20px;
}

.cf-content {
  background-color: #fff;
  border-radius:6rpx;
  border:1rpx solid #DDDEE1;
  padding:10rpx 20rpx;
  box-sizing: border-box;
  width:100%;
  height:auto;
}

.cf-send {
  display:block;
  width:140rpx;
  margin-left:10rpx;
  line-height:60rpx;
  font-size:13px;
  padding:0;
  height:60rpx;
}

.emoji-box {
  position: relative;
  height: 200px;
  padding: 5px 0;
  box-sizing: border-box;
  margin-bottom: -200px;
}

.emoji-move-in {
  -webkit-animation: emoji-move-in 0.3s forwards;
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  -webkit-animation: emoji-move-out 0.3s forwards;
  animation: emoji-move-out 0.3s forwards;
}
