/* components/modal/imodal.wxss */

.bg {  
  position: fixed;  
  top: 0;  
  left: 0;  
  width: 100%;  
  height: 100%;  
  background-color: black;  
  z-index: 1001;  
  -moz-opacity: 0.7;  
  opacity: 0.70;  
  filter: alpha(opacity=70);  
}  
  
.show {
  text-align: center;  
  position: fixed;  
  top: 45%;  
  left: 20%;  
  width: 53%;  
  height: 15%;  
  padding: 8px;  
  border: 8px solid #e8e9f7;  
  background-color: white;  
  z-index: 1002;  
  overflow: auto;  
  
}  

.sure{  
  margin-top: 25rpx;  
  height: 80rpx;
  font-size: 32rpx;  
  color: royalblue  
}