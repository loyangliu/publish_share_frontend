.menus{
  background:white;
  width:100%;
  height: 75rpx;
  display: flex;
  align-items:center;
  border-top:2px solid #F6F8F9;
  border-bottom:5rpx solid #F6F8F9;
}

.menu_tab {
  width: 50%;
  text-align: center;
  height: 100%;
  display: flex;
  align-items:center;
}

.active_tab{
  border-bottom:4rpx solid #00818a;
  color:#00818a;
}