<view class="top-menu"></view>

<view class="articles">
  <view wx:for="{{ articles }}" class="article">
    <!-- header -->
    <view class="article-header">

      <view class="article-header-left">
        <image src="{{ item.user.wx_avatar_url }}" class="article-user-avatar"></image> 
      </view>

      <view class="article-header-center">
        <view class="article-user-name">{{ item.user.wx_nick_name }}</view>
        <view class="article-publish-time">{{ item.publish_at.diffForHumans }}</view>
      </view>

      <view class="article-header-right">
        <button size="mini" type="primary">关注</button>
      </view>
    </view>
    <!-- header # -->

    <!-- body -->
    <view class="article-body">
      <text>{{ item.description }}</text>
    </view>
    <!-- body # -->

    <!-- images -->
     <view class="article-images">
      <view wx:for="{{ item.images }}" wx:for-item="image" class="item {{ (index+1) % 3 != 0 ? 'item-interval' : '' }}">
        <image src="{{ image.thumbnail_path }}" mode="aspectFill" class="image"></image>
      </view>
    </view> 
    <!-- images -->
  </view>
</view>

