/* pages/publish/publish.wxss */

.hidden{
  display:none !important;
}

.visibility{
  visibility:hidden !important;
}

.view-publish{
  padding-top:10rpx;
  overflow: hidden;
}

.view-name,.view-description{
  background:#fff;
  padding:10px;
  margin-bottom:10rpx;  
}

.input-description{
  width:100%;
}

/* 图片自适应九宫格 */
.images-container{
  background:#fff;
  padding:20rpx;
  overflow:auto;
}

.images-items{
  margin-top:-2%;
}

.images-item{
  width:32%;
  height:32vw; 
  display:block;
  float:left;
  margin-top:2%;
  position:relative;
}

.images-item-image{
  width:100%;
  height:100%;
}

.images-item-del{
  width:50rpx;
  height:50rpx;
  background:#44494C;
  position:absolute;
  right:0;
  top:0;
  opacity: 0.5;
  z-index:9999;
}

.images-item-del image{
  width:90%;
  height:90%;
  margin-left:5%;
  margin-top:5%;
  display:block;
}

.images-item-interval{
  margin-right:2%;
}
  /* 图片选择按钮 */
.images-selector{
  border:2rpx dashed #8a8a8a;
  text-align:center;
  height:100%;
  box-sizing:border-box;
}

.images-selector-icon{
  width:60rpx;
  height:60rpx;
  margin-top:50rpx;
}

.images-selector-text{
  font-size:25rpx;
  color:#8a8a8a;
}

.footer{
  padding:20rpx;
  background:#fff;
  margin-top:10rpx;
}

.mt20{
  margin-top:20rpx;
}

/*顶部*/
.header-wrap{
  height:90rpx;
}

.header{
  height:90rpx;
  width:100%;
  background:#fff;
  position:fixed;
  z-index:99;
  top:0;
  border-bottom:1rpx solid #F6F8F9; 
  padding:10rpx;
  box-sizing: border-box;
  display: flex;
}

.header>.left{
  flex-grow: 1;
}

.header>.center{
  flex-grow: 1;
  text-align: center;
}

.header>.right{
  flex-grow: 1;
  text-align: right;
}