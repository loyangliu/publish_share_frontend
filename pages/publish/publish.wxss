.header-wrap{
  height:90rpx;
}

.header{
  height:90rpx;
  width:100%;
  background:#fff;
  position:fixed;
  z-index:99;
  top:0;
  border-bottom:1rpx solid #F6F8F9; 
  padding:10rpx;
  box-sizing: border-box;
  display: flex;
}

.header>.left{
  flex-grow: 1;
}

.header>.center{
  flex-grow: 1;
  text-align: center;
}

.header>.right{
  flex-grow: 1;
  text-align: right;
}

/* 表单 */
.form-group{
  margin-top:10rpx;
  background: #fff;
  padding:10rpx;
} 

.input{
  width:100%;
}

/* 图片 */
.images{
  overflow: auto;
}

.images>.item{
  width:32%;
  height:32vw;
  float:left;
}

.images>.item:nth-child(3n+3), .images>.item:nth-child(3n+2){
  margin-left:2%;
}

.images>.item:nth-child(n+4){
  margin-top:2%;
}

.images>.selector{
  border:2rpx dashed #8a8a8a;
  text-align:center;
  box-sizing:border-box;
  font-size:25rpx;
  color:#8a8a8a;
}
.images>.selector>.icon{
  width:60rpx;
  height:60rpx;
  margin-top:50rpx;
}

/* 图片条目 */
.images>.image{
  position:relative;
}
.images>.image image{
  width:100%;
  height:100%;
}
.images>.image .image-del{
  width:50rpx;
  height:50rpx;
  background:#44494C;
  position:absolute;
  right:0;
  top:0;
  opacity: 0.5;
  z-index:9999;
}