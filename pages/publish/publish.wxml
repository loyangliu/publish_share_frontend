<form bindsubmit='publish'>
  <!-- 顶部按钮 -->
  <view class="header-wrap">
    <view class="header">
      <view class="left">
        <button bindtap='backTab' size="mini">返回</button>
      </view>
      <view class="center">
        发帖
      </view>
      <view class="right">
        <button type="primary" size="mini" form-type="submit">发布</button>
      </view>
    </view>
  </view>

  <view class="form-group">
    <input name="name" value="{{ name }}" placeholder="请输入名称" class="input"></input>
  </view>

  <view class="form-group">
    <textarea name="content" class="input" placeholder="请输入介绍内容" value="{{ content }}"></textarea>
  </view>

  <view class="form-group images">
    <!-- 图片列表 -->
    <view class="item image" wx:for="{{ images }}" wx:key="{{ index }}">
      <view class="image-del" data-index="{{ index }}" bindtap="deleteImage">
        <image src="/images/close.png"></image>
      </view>
      <image src="{{ item.src }}" mode="aspectFill"></image>
    </view>


    <!-- 选择图片按钮 -->
    <view class="item selector" bindtap="chooseImage" hidden="{{ imageMaxNum <= images.length }}">
      <image class="icon" src="/images/picture.png"></image>
      <view>
        <text>添加图片</text>
      </view>
    </view>
  </view>

</form>