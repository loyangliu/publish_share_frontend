/* pages/mine/mine.wxss */

.personal {
  width: 100%;
  height:auto;
  background: #00818a;
}

.personal_line1 {
  width: 100%;
  height: 148rpx;
}

.personal_aval {
  width: 148rpx;
  height: 148rpx;
  padding: 20rpx;
  box-sizing:border-box;
  float: left;
}

.personal_nick {
  width: 248rpx;
  height: 148rpx;
  display: flex;
  float: left;
}

.personal_articles {
  width: 248rpx;
  height: 148rpx;

  padding: 15rpx;
  box-sizing:border-box;
  font-size: 30rpx;
  float:right;
  text-align: right;
  margin-right: 30rpx;
}

.userinfo-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #dbedf3;
  align-self: center; /* 父节点为flex时，设置子元素垂直居中 */
  white-space:nowrap; /* 不换行 */
  overflow:hidden; /* 溢出隐藏 */
  
}

.personal_articles_tie {
  margin-right: 3rpx;
  color:#dbedf3;
}

.personal_line2 {
  width: 100%;
  height: 180rpx;

}

.phone_input {
  border-color: black; 
  border-style: solid; 
  border-top-width: 0px;
  border-right-width: 0px; 
  border-left-width: 0px;
  border-bottom-width: 3rpx;
  box-sizing: border-box;
  width:300rpx;
  
}


/*********************/
.menus{
  background:white;
  width:100%;
  height: 75rpx;
  display: flex;
  align-items:center;
  border-top:2px solid #F6F8F9;
  border-bottom:5rpx solid #F6F8F9;
}

.menu_tab {
  width: 50%;
  text-align: center;
  height: 100%;
  display: flex;
  align-items:center;
}

.active_tab{
  border-bottom:4rpx solid #00818a;
  color:#00818a;
}

/***********************/
/* 文章列表 */
.article{
  padding-top:10rpx;
}


/* 发送评论弹窗浮在底部 */
.sendmsg {
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  width:100%;
  float:left;
  height: 150rpx;
  margin-left: 20rpx;
}

.cf-box {
  margin-top:20rpx;
  display: flex;
}

.cf-content {
  border-color: green; 
  border-style: solid; 
  border-top-width: 0px;
  border-right-width: 0px; 
  border-left-width: 0px;
  border-bottom-width: 3rpx;
  padding:10rpx 20rpx;
  box-sizing: border-box;
  width:70%;
  height:auto;
}

.cf-send {
  display:block;
  width:15%;
  margin-left:30rpx;
  line-height:60rpx;
  font-size:13px;
  padding:0;
  height:60rpx;
}